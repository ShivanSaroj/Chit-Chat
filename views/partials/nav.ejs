<!-- views/partials/nav.ejs -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
      <a class="navbar-brand" href="/">Chit-Chat</a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
          <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                  <a class="nav-link active" href="/">Home</a>
              </li>
             
              <% if (locals.user && user.role === 'ADMIN') { %>
              <li class="nav-item">
                  <a class="nav-link" href="/admin">Admin</a>
              </li>
              <% } %>
          </ul>
          
          <div class="d-flex align-items-center">
              <% if (locals.user) { %>
                
                  
                  <div class="dropdown">
                      <img src="<%= user.profileImageURL %>" 
                           style="width: 36px; height: 36px; object-fit: cover; border-radius: 50%; border: 2px solid #0d6efd; cursor: pointer;"
                           id="profileDropdown"
                           data-bs-toggle="dropdown"
                           aria-expanded="false"
                           alt="Profile">
                      <ul class="dropdown-menu dropdown-menu-end" style="min-width: 250px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.2);">
                          <li>
                              <div class="d-flex align-items-center px-3 py-2">
                                  <img src="<%= user.profileImageURL %>" 
                                       style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" 
                                       class="me-2">
                                  <div>
                                      <h6 class="mb-0" style="font-size: 1rem;"><%= user.fullname %></h6>
                                      <small class="text-muted" style="font-size: 0.8rem;"><%= user.email %></small>
                                  </div>
                              </div>
                          </li>
                          <li><hr class="dropdown-divider" style="margin: 0.5rem 0;"></li>
                         
                          <li>
                              <a class="dropdown-item text-danger" href="/user/logout" style="padding: 0.5rem 1.5rem;">
                                  <i class="bi bi-box-arrow-right me-2"></i>Logout
                              </a>
                          </li>
                      </ul>
                  </div>
              <% } else { %>
                  <a href="/user/signin" class="btn btn-outline-light me-2">Login</a>
                  <a href="/user/signup" class="btn btn-primary">Sign Up</a>
              <% } %>
          </div>
      </div>
  </div>
</nav>

<script>
  // Add hover effect with JavaScript if needed
  document.addEventListener('DOMContentLoaded', function() {
      const profileImg = document.querySelector('img[alt="Profile"]');
      if (profileImg) {
          profileImg.addEventListener('mouseenter', function() {
              this.style.transform = 'scale(1.1)';
              this.style.transition = 'transform 0.2s ease';
          });
          profileImg.addEventListener('mouseleave', function() {
              this.style.transform = 'scale(1)';
          });
      }
  });
</script>