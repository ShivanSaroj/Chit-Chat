<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('./partials/head') %>
    <title>Chat - Messages</title>
    <style>
        .chat-list-item {
            border: none;
            border-radius: 8px;
            margin-bottom: 8px;
            transition: background-color 0.2s ease;
        }
        .chat-list-item:hover {
            background-color: #f8f9fa;
        }
        .unread-badge {
            background-color: #0d6efd;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
        }
        .share-mode {
            background-color: #e3f2fd;
            border-left: 4px solid #2196f3;
        }
        .share-preview {
            background-color: #f5f5f5;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 16px;
            border-left: 4px solid #2196f3;
        }
    </style>
</head>

<body class="bg-body-tertiary">
    <%- include('./partials/nav') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Share mode header -->
                <% if (locals.isSharing) { %>
                <div class="alert alert-info share-mode">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-share me-2"></i>
                        <strong>Share Post</strong>
                        <span class="ms-auto">
                            <a href="/chat" class="btn btn-sm btn-outline-secondary">Cancel</a>
                        </span>
                    </div>
                    <div id="sharePreview" class="share-preview mt-3" style="display: none;">
                        <!-- Share preview will be populated by JavaScript -->
                    </div>
                </div>
                <% } %>

                <div class="card">
                    <div class="card-header">
                        <h4>
                            <i class="bi bi-chat-dots"></i> 
                            <% if (locals.isSharing) { %>
                                Select a contact to share with
                            <% } else { %>
                                Messages
                            <% } %>
                        </h4>
                        <% if (!locals.isSharing) { %>
                        <p class="mb-0 text-muted">Send messages to people you follow</p>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (locals.error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <% if (locals.success) { %>
                            <div class="alert alert-success"><%= success %></div>
                        <% } %>

                        <% if (followers && followers.length > 0) { %>
                            <div class="list-group">
                                <% followers.forEach(follower => { %>
                                <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between <%= locals.isSharing ? 'share-contact' : '' %>" 
                                     data-user-id="<%= follower._id %>"
                                     <%= locals.isSharing ? 'style="cursor: pointer;"' : '' %>>
                                    
                                    <div class="d-flex align-items-center">
                                        <img src="<%= follower.profileImageURL %>"
                                             class="rounded-circle me-3"
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                            onerror="this.src='https://via.placeholder.com/50x50/6c757d/ffffff?text=User'">
                                        <div>
                                            <h6 class="mb-0"><%= follower.fullname %></h6>
                                            <small class="text-muted">
                                                <% if (locals.isSharing) { %>
                                                    Click to share post
                                                <% } else { %>
                                                    Click to start conversation
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>

                                    <% const unread = unreadMap?.[follower._id.toString()] || 0; %>
                                    <% if (unread > 0) { %>
                                        <span class="badge bg-danger rounded-pill"><%= unread %></span>
                                    <% } else { %>
                                        <i class="bi bi-chevron-right text-muted"></i>
                                    <% } %>
                                    
                                    <!-- Regular chat link (only when not sharing) -->
                                    <% if (!locals.isSharing) { %>
                                    <a href="/chat/conversation/<%= follower._id %>" class="stretched-link"></a>
                                    <% } %>
                                </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-people display-1 text-muted"></i>
                                <h5 class="mt-3 text-muted">Not following anyone yet</h5>
                                <p class="text-muted">Follow users to start messaging them.</p>
                                <a href="/" class="btn btn-primary">Go to Home</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/script') %>
   <% if (isSharing) { %>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const shareData = JSON.parse(sessionStorage.getItem('shareData') || '{}');

    if (shareData.title) {
        const sharePreview = document.getElementById('sharePreview');
        if (sharePreview) {
            sharePreview.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="bi bi-file-post me-2"></i>
                    <div>
                        <strong>${shareData.title}</strong>
                        <br>
                        <small class="text-muted">${shareData.url}</small>
                    </div>
                </div>
            `;
            sharePreview.style.display = 'block';
        }
    }

    document.querySelectorAll('.share-contact').forEach(function (contact) {
        contact.addEventListener('click', function () {
            const userId = this.dataset.userId;
            if (shareData.message) {
                sessionStorage.setItem('pendingShare', JSON.stringify(shareData));
                window.location.href = `/chat/conversation/${userId}`;
            }
        });
    });
});
</script>
<% } %>

</body>
</html>