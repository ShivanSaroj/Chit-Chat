<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('./partials/head') %>
    <title>Profile - Chit-Chat</title>
</head>
<body class="bg-body-tertiary">
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="<%= user.profileImageURL %>" 
                             class="rounded-circle img-fluid" 
                             style="width: 150px; height: 150px; object-fit: cover;"
                             alt="Profile Image">
                        <h5 class="my-3"><%= user.fullname %></h5>
                        <p class="text-muted mb-4">Member since <%= user.createdAt.toLocaleDateString() %></p>
                        
                        <!-- Followers/Following Stats -->
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <h6 class="mb-0"><%= user.followersCount || 0 %></h6>
                                <small class="text-muted">Followers</small>
                            </div>
                            <div class="col-6">
                                <h6 class="mb-0"><%= user.followingCount || 0 %></h6>
                                <small class="text-muted">Following</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Followers List -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h6>Followers (<%= user.followersCount || 0 %>)</h6>
                    </div>
                    <div class="card-body">
                        <% if (user.followers && user.followers.length > 0) { %>
                            <% user.followers.forEach(follower => { %>
                                <div class="d-flex align-items-center mb-2">
                                    <img src="<%= follower.profileImageURL %>" 
                                         class="rounded-circle me-2" 
                                         style="width: 32px; height: 32px; object-fit: cover;">
                                    <a href="/user/profile/<%= follower._id %>" class="text-decoration-none">
                                        <%= follower.fullname %>
                                    </a>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted mb-0">No followers yet</p>
                        <% } %>
                    </div>
                </div>
                
                <!-- Following List -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h6>Following (<%= user.followingCount || 0 %>)</h6>
                    </div>
                    <div class="card-body">
                        <% if (user.following && user.following.length > 0) { %>
                            <% user.following.forEach(following => { %>
                                <div class="d-flex align-items-center mb-2">
                                    <img src="<%= following.profileImageURL %>" 
                                         class="rounded-circle me-2" 
                                         style="width: 32px; height: 32px; object-fit: cover;">
                                    <a href="/user/profile/<%= following._id %>" class="text-decoration-none">
                                        <%= following.fullname %>
                                    </a>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted mb-0">Not following anyone yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <% if (success) { %>
                    <div class="alert alert-success"><%= success %></div>
                <% } %>
                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Update Profile</h5>
                    </div>
                    <div class="card-body">
                        <form action="/user/profile/update" method="POST" enctype="multipart/form-data">
                            <div class="form-group mb-3">
                                <label for="fullname">Full Name</label>
                                <input type="text" class="form-control" id="fullname" name="fullname" 
                                       value="<%= user.fullname %>" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       value="<%= user.email %>" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="profileImage">Profile Image</label>
                                <input type="file" class="form-control" id="profileImage" name="profileImage"
                                       accept="image/jpeg, image/png, image/gif">
                                <small class="form-text text-muted">Choose a new profile image (optional)</small>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </form>
                    </div>
                </div>

                <!-- User's Posts Section -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>My Posts (<%= totalPosts %>)</h5>
                        <a href="/blog/add-new" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> New Post
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (userPosts && userPosts.length > 0) { %>
                            <% userPosts.forEach(post => { %>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">
                                                <a href="/blog/<%= post._id %>" class="text-decoration-none">
                                                    <%= post.title %>
                                                </a>
                                            </h6>
                                            <div class="dropdown">
                                                <button class="btn btn-link text-muted btn-sm" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="/blog/edit/<%= post._id %>">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a></li>
                                                    <li><button class="dropdown-item text-danger" onclick="deleteBlog('<%= post._id %>')">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <p class="card-text text-muted">
                                            <%- post.body.substring(0, 150) %>...
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> <%= new Date(post.createdAt).toLocaleDateString() %>
                                            </small>
                                            <div class="d-flex gap-3">
                                                <small class="text-muted">
                                                    <i class="bi bi-heart"></i> <%= post.likesCount || 0 %>
                                                </small>
                                                <small class="text-muted">
                                                    <i class="bi bi-chat"></i> <%= post.commentCount || 0 %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                            
                            <!-- Pagination for posts -->
                            <% if (totalPages > 1) { %>
                            <nav aria-label="Posts pagination" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    <% if (hasPrevPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/user/profile?page=<%= prevPage %>">Previous</a>
                                    </li>
                                    <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                    <% } %>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="/user/profile?page=<%= i %>"><%= i %></a>
                                    </li>
                                    <% } %>
                                    
                                    <% if (hasNextPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/user/profile?page=<%= nextPage %>">Next</a>
                                    </li>
                                    <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                    <% } %>
                                </ul>
                            </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-file-earmark-text display-1 text-muted"></i>
                                <h6 class="mt-3 text-muted">No posts yet</h6>
                                <p class="text-muted">Start sharing your thoughts with the world!</p>
                                <a href="/blog/add-new" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create Your First Post
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5>Change Password</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">To change your password, you'll need to reset it via email verification.</p>
                        <a href="/user/forgot-password" class="btn btn-warning">
                            <i class="bi bi-key"></i> Reset Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
